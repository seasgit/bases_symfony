{% extends 'base.html.twig' %}

{% block main %}
<div class="container">
    <div class="row mt-5">
        <div class="col-4">
            <h4>{{ book.title }}</h4>
            <img src="{{ asset('images/' ~ book.cover )}}" alt="" class='w-50'>
            <p>{{ book.resume}}</p>
            <p>Parution {{ book.parution|date("d/m/Y") }}</p>
            <p>Prix : {{ book.price }}</p>
        </div>    
    </div>
</div>
    
{% endblock %}